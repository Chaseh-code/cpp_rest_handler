{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++.exe build active file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-static",
                "${file}",
                "-DCURL_STATICLIB",
                "-I/usr/lib/curl/include",
                "/usr/lib/curl/lib/libcurl.a",
                "-lcares",
                "-lssh2",
                "-lssl",
                "-lcrypto",
                "-lz",
                "-g",
                "-o",
                "${fileDirname}/curlman"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
